generator client {
  provider      = "prisma-client-js"
  output        = "../prisma/generated/client"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// Configurações do banco de dados
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Use a variável de ambiente para armazenar sua URL do banco de dados
}

model User {
  id       String    @id @default(uuid()) // Gera automaticamente um UUID
  email    String    @unique
  password String
  photourl String?
  createdAt DateTime @default(now()) @map("created_at")
  name     String?
}
